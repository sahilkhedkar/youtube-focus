{
  "manifest_version": 3,
  "name": "YT Minimal Viewer",
  "version": "1.0",
  "description": "Clean up YouTube's interface by hiding distractions like comments, sidebar, and suggestions.",
  "permissions": ["scripting", "tabs"],
  "action": {
    "default_popup": "controller.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "events.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["viewerToggle.js"],
      "css": ["ui.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
